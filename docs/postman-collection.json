            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.environment.set('trainee_token', pm.response.json().token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Courses",
      "item": [
        {
          "name": "Get All Courses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          }
        },
        {
          "name": "Create Free Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{trainer_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Introduction to Programming",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Learn basic programming concepts",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "0",
                  "type": "text"
                },
                {
                  "key": "isFree",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.environment.set('course_id', pm.response.json()._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Paid Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{trainer_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Advanced JavaScript Course",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Learn advanced JavaScript concepts",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "100",
                  "type": "text"
                },
                {
                  "key": "isFree",
                  "value": "false",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.environment.set('paid_course_id', pm.response.json()._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Enroll in Free Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{trainee_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{course_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses/enroll",
              "host": ["{{base_url}}"],
              "path": ["courses", "enroll"]
            }
          }
        },
        {
          "name": "Enroll in Paid Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{trainee_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{paid_course_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses/enroll",
              "host": ["{{base_url}}"],
              "path": ["courses", "enroll"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Initialize Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{trainee_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{paid_course_id}}\",\n  \"email\": \"trainee@test.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/init",
              "host": ["{{base_url}}"],
              "path": ["payments", "init"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.environment.set('payment_reference', pm.response.json().reference);",
                  "    console.log('Payment URL:', pm.response.json().authorization_url);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Verify Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reference\": \"{{payment_reference}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/verify",
              "host": ["{{base_url}}"],
              "path": ["payments", "verify"]
            }
          }
        }
      ]
    },
