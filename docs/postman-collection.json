{
  "info": {
    "name": "PadupPulse Backend API",
    "description": "Complete API collection for PadupPulse Learning Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000/api",
      "type": "string"
    },
    {
      "key": "trainer_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "trainee_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "course_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "paid_course_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "payment_reference",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Trainer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Trainer\",\n  \"email\": \"trainer@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"trainer\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.environment.set('trainer_token', pm.response.json().token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Register Trainee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Trainee\",\n  \"email\": \"trainee@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"trainee\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
